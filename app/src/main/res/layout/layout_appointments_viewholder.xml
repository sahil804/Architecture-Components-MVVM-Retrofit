<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:minHeight="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/tv_patient_name"
                    style="@style/ContentBase.ContentHeading.Item.AppointmentItem"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_patient_age_gender"
                    style="@style/ContentBase.ContentSubHeading"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/tv_time_slot"
                    style="@style/ContentBase.ContentHeading.Item.AppointmentItem"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/display_status"
                    style="@style/ContentBase.ContentHeading.Item.AppointmentItem" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/right_arrow"
            style="@style/navigation_button"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/navigate_forward" />
    </LinearLayout>

</android.support.v7.widget.CardView>

