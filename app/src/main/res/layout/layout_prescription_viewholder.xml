<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_prescription_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/ContentBase.ContentHeading"
                android:layout_gravity="center_horizontal"
                android:text="@string/prescription" />

            <TextView
                android:id="@+id/tv_prescription_date"
                style="@style/ContentBase.ContentSubHeading"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_drugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/ContentBase.ContentHeading.Item.EncounterItem"
                android:drawableLeft="@drawable/medicine"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/drugs" />

            <TextView
                android:id="@+id/tv_drugs_value"
                style="@style/ContentBase.ContentSubHeading"
                android:lineSpacingExtra="@dimen/cardview_compat_inset_shadow" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>